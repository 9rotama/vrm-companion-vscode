{
  "name": "vrm-companion-vscode",
  "displayName": "vrm-companion-vscode",
  "description": "work with your favorite avatar on vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vrm-companion-vscode.show",
        "title": "vrm-companion-vscode: Show"
      }
    ]
  },
  "workspaces": {
    "packages": [
      "webview"
    ]
  },
  "scripts": {
    "start:webview": "pnpm run start -w webview",
    "build:webview": "pnpm run build -w webview",
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8",
    "@types/node": "^20.17.0",
    "@types/vscode": "^1.46.0",
    "@vscode/test-electron": "^1.5.0",
    "glob": "^9",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.17.0",
    "webview": "^1.1.0"
  }
}
